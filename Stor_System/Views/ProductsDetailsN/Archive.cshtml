@using Stor_System;
@model dynamic

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    .product-card {
        /* border: 1px solid #000; */
        padding: 10px;
        text-align: center;
        background-color: white;
        box-shadow: 0 -4px 11px 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px
    }

        .product-card img {
            max-width: 100%;
            height: 100px;
            width: 185px;
            float: right;
        }

    .product-title {
        font-weight: bold;
        margin-top: 10px;
        height: 75px;
    }

    .product-details {
        margin-top: 5px;
    }

    .F_PH::placeholder {
        color: #c9c8c8; /* Adjust the placeholder color if needed */
    }

    .DDL {
        text-align: center
    }
</style>



<style>
    .circle-container {
        display: flex;
        justify-content: space-between;
        width: 150px; /* Adjust width as needed */
        margin: 0 auto;
    }

    .circle {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin-inline: auto;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8">
                            <h2 style="font-size: 2.188rem;">Products Archive</h2>
                        </div>
                        
                    </div>

                    <div style="margin-bottom: 25px;">
                        <a href="/Home/index" class="card-description" style="color: #b66dff;"><code>Dashboard</code> </a> /
                        <a href="/ProductsDetailsN/Archive" class="card-description" style="color: #b66dff;"><code>Products Archive</code> </a>
                    </div>
                    <hr />

                    <div class="accordion" id="accordionPanelsStayOpenExample">
                        @foreach (ProductsDetail ProDtl in Model.ProductsDetails)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-heading-@ProDtl.ProDetailId">
                                    <button class="accordion-button collapsed"  type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse-@ProDtl.ProDetailId" aria-expanded="false" aria-controls="panelsStayOpen-collapse-@ProDtl.ProDetailId">
                                        <div class="row" style="width: 100%;">
                                            <div class="col-lg-2">
                                                <strong>BarCode : </strong><br>@ProDtl.ProDetailBarcode
                                            </div>
                                            <div class="col-lg-2">
                                                <strong>Model : </strong><br>@ProDtl.Product.ProductName
                                            </div>
                                            <div class="col-lg-2">
                                                <strong>Inventory : </strong><br>@ProDtl.Inventory.InventoryName
                                            </div>
                                            
                                            
                                        </div>
                                    </button>
                                </h2>
                                <div id="panelsStayOpen-collapse-@ProDtl.ProDetailId" class="accordion-collapse collapse " aria-labelledby="panelsStayOpen-heading-@ProDtl.ProDetailId">
                                    <div class="accordion-body">
                                        <strong>Description :</strong>
                                        <br>
                                        @ProDtl.ProDetailDescription
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

